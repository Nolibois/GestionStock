                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btn_supprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="581,364,0,0" VerticalAlignment="Top" Background="#FFFB7148" Width="73" Padding="3,3,3,3" Height="22">
