                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="btn_modifier" Content="Modifier" HorizontalAlignment="Left" Margin="488,364,0,0" VerticalAlignment="Top" Background="#FFDEC173" Width="59" Padding="3,3,3,3" Height="22">
