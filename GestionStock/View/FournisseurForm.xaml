        <Button x:Name="CancelBtn_Frs" Content="Annuler" HorizontalAlignment="Left" Margin="671,364,0,0" VerticalAlignment="Top" Background="#FF41DA5F" Width="54" Padding="3,3,3,3" Height="22" Click="CancelBtn_Click">
